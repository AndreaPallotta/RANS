[Unit]
Description=Rust API Service for the RANS Stack

[Service]
Type=forking
PIDFile=/var/run/rans.api.pid

ExecStart=/usr/bin/server
ExecReload=/usr/bin/pkill -HUP -f $MAINPID
KillSignal=SIGQUIT
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
Alias=rans.api.service
Alias=rans.api
